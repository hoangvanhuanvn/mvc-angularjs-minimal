    <![endif]-->
</head>
<body>
    <div class="container">
        @RenderBody()
    </div>

    <footer class="footer">
        <div class="container">
            <p class="text-muted">Place sticky footer content here.</p>
        </div>
    </footer>

    <script type="text/javascript">
        (function (i, s, o, g, r, a, m) {
