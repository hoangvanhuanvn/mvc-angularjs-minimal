    @RenderSection("scripts", required: false)

    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/app")

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/css/bootstrap")
</body>
</html>
